<!-- res/values/themes.xml -->
<resources>
    <!-- Thème parent -->
    <style name="Theme.Prestapoints" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Surcharge des couleurs -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/myColorPrimaryVariant</item>
        <item name="android:statusBarColor">@color/blue_dark</item>
    </style>
    <style name="Theme.Btn" parent="Theme.Prestapoints">
        <!-- Surcharge des couleurs -->
        <item name="colorPrimary">@color/myStatusBarColor</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_background</item>
        <!-- Autres propriétés de style ici -->
    </style>
    <style name="CardViewStyle" parent="">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>